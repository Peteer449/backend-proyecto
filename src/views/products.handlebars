<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Producto</th>
        <th scope="col">Precio</th>
        <th scope="col">Foto</th>
      </tr>
    </thead>
    <tbody>
    {{#each allProducts}}
      <tr class="align-middle">
        <th scope="row">{{this.id}}</th>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td><img src="{{this.file.filename}}" height="100px"></td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>