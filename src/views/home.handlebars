<h2 class="text-center mb-5">Agregar Producto</h2>
<div class="d-flex justify-content-evenly">
  <form action="/productos" enctype="multipart/form-data" method="POST" class="d-flex flex-column" id="productForm">
    Titulo: <input type="text" name="title" id="title"/> 
    Precio:<input type="number" name="price" id="price"/>
    Foto: <input type="text" name="myFile" id="image"/>
    <button>Enviar</button>
  </form>
  <form id="chatForm" >
    <div id="container" style="height:250px; display:block; overflow-y:scroll; scroll-behavior: smooth;"></div>
    <input id="chatInput" placeholder="Mensaje"/>
    <button type="submit">Enviar</button>
  </form>
  <hr/>
</div>
<div class="mt-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Producto</th>
        <th scope="col">Precio</th>
        <th scope="col">Foto</th>
      </tr>
    </thead>
    <tbody id="productsTable">

    </tbody>
  </table>
</div>

